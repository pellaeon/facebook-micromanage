{
	"manifest_version": 2,
	"name": "Facebook Not Typing",
	"description": "Block facebook from knowing you're typing a comment or message",
	"version": "1.0",

	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_title": "Facebook Timeline"
	},
	"permissions": [
		"activeTab",
		"webRequest",
		"webRequestBlocking",
		"storage",
		"unlimitedStorage",
		"https://www.facebook.com/*"
	]
}
